{
  "allowlist_globs": [
    "README.md",
    "MANIFEST.json",
    "catalog/**",
    "objects/**",
    "architecture/**",
    "protocols/**",
    "scripts/**",
    "schemas/**"
  ],
  "artifact_name": "agentx-lab",
  "base_branch": "main",
  "baseline_commands": [
    [
      "python",
      "scripts/validate_arsenal.py",
      "--repo-root",
      ".",
      "--strict"
    ],
    [
      "python",
      "scripts/schema_validate.py",
      "--repo-root",
      "."
    ]
  ],
  "budgets": {
    "max_changed_files": 200,
    "max_changed_lines": 10000
  },
  "environment_profiles": {
    "dev": "configs/environments/dev.json",
    "prod": "configs/environments/prod.json",
    "stage": "configs/environments/stage.json"
  },
  "evidence_root_base": "artifacts/evidence",
  "redaction_policy_path": "SECURITY.redaction.yml",
  "repo_root": ".."
}
