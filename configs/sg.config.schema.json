{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "repo_root",
    "base_branch",
    "allowlist_globs",
    "baseline_commands",
    "artifact_name",
    "budgets",
    "environment_profiles"
  ],
  "properties": {
    "repo_root": { "type": "string" },
    "base_branch": { "type": "string" },
    "allowlist_globs": { "type": "array", "items": { "type": "string" } },
    "baseline_commands": {
      "type": "array",
      "items": { "type": "array", "items": { "type": "string" } }
    },
    "artifact_name": { "type": "string" },
    "budgets": { "type": "object", "additionalProperties": { "type": "integer" } },
    "redaction_policy_path": { "type": "string" },
    "evidence_root_base": { "type": "string" },
    "environment_profiles": {
      "type": "object",
      "additionalProperties": false,
      "required": ["dev", "stage", "prod"],
      "properties": {
        "dev": { "type": "string", "pattern": "^configs/environments/dev\\.json$" },
        "stage": { "type": "string", "pattern": "^configs/environments/stage\\.json$" },
        "prod": { "type": "string", "pattern": "^configs/environments/prod\\.json$" }
      }
    }
  }
}
