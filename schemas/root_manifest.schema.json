{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AgentX Lab Root Manifest",
  "type": "object",
  "required": [
    "arsenal",
    "objects",
    "protocols",
    "architecture",
    "metrics",
    "checksums"
  ],
  "properties": {
    "arsenal": {
      "type": "object",
      "required": [
        "name",
        "version",
        "created",
        "status"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "version": {
          "type": "string",
          "pattern": "^v\\d+\\.\\d+\\.\\d+$"
        },
        "created": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        }
      },
      "additionalProperties": true
    },
    "objects": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "version",
          "score",
          "score_target",
          "gates_verified",
          "release_gates",
          "path"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "version": {
            "type": "string",
            "pattern": "^v\\d+\\.\\d+\\.\\d+$"
          },
          "score": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100
          },
          "score_target": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100
          },
          "path": {
            "type": "string"
          },
          "gates_verified": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "release_gates": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": true
      }
    },
    "protocols": {
      "type": "array",
      "items": {
        "type": "object"
      },
      "minItems": 1
    },
    "architecture": {
      "type": "array",
      "items": {
        "type": "object"
      },
      "minItems": 1
    },
    "catalog": {
      "type": "object"
    },
    "tools": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "checksums": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": [
          "sha256"
        ],
        "properties": {
          "sha256": {
            "type": "string",
            "pattern": "^[0-9a-f]{64}$"
          }
        },
        "additionalProperties": true
      }
    },
    "metrics": {
      "type": "object",
      "required": [
        "total_objects",
        "total_protocols",
        "total_architecture_docs",
        "average_score",
        "minimum_score_threshold",
        "all_objects_above_threshold"
      ],
      "properties": {
        "total_objects": {
          "type": "integer",
          "minimum": 0
        },
        "total_protocols": {
          "type": "integer",
          "minimum": 0
        },
        "total_architecture_docs": {
          "type": "integer",
          "minimum": 0
        },
        "average_score": {
          "type": "number"
        },
        "minimum_score_threshold": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "all_objects_above_threshold": {
          "type": "boolean"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
