{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "FAIL_PACKET",
    "MUTATION_PLAN",
    "PRE_VERIFICATION_SCRIPT",
    "REGRESSION_TEST_PAYLOAD",
    "SHA256_ANCHOR"
  ],
  "properties": {
    "FAIL_PACKET": {
      "type": "object",
      "required": ["summary", "signals", "repro"],
      "properties": {
        "summary": { "type": "string", "minLength": 1 },
        "signals": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "repro": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": true
    },
    "MUTATION_PLAN": {
      "type": "object",
      "required": ["diff_scope", "constraints"],
      "properties": {
        "diff_scope": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "constraints": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        }
      },
      "additionalProperties": true
    },
    "PRE_VERIFICATION_SCRIPT": {
      "type": "string",
      "minLength": 1
    },
    "REGRESSION_TEST_PAYLOAD": {
      "type": "object",
      "required": ["suite", "expected"],
      "properties": {
        "suite": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "expected": {
          "type": "object",
          "minProperties": 1
        }
      },
      "additionalProperties": true
    },
    "SHA256_ANCHOR": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    }
  }
}
