{
  "goal": "All required CI checks green â€” no exceptions",
  "commands": ["make test", "make lint"],
  "required_checks": "auto-detect from PR",
  "done_when": [
    "All required CI checks pass",
    "Audit verdict is OK",
    "Diff budget not exceeded"
  ],
  "touch_allowlist": ["src/**", "tests/**", "docs/**", "*.toml", "*.yml", "*.yaml"],
  "touch_denylist": [".github/workflows/**", "secrets/**", "*.pem", "*.key"],
  "max_files": 15,
  "max_loc": 300,
  "refactor_policy": "no-refactor",
  "no_disable_security_checks": true,
  "actions_must_be_pinned": true,
  "dependencies_must_be_pinned": true
}
